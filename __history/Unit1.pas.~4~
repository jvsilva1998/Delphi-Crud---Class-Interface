unit Unit1;

interface

uses
  Vcl.Forms, Vcl.StdCtrls, Vcl.Buttons, Vcl.Controls, Vcl.Dialogs, System.SysUtils, System.Classes;

type
  TForm1 = class(TForm)
    edtNome: TEdit;
    edtQtd: TEdit;
    BitBtn1: TBitBtn;
    Memo1: TMemo;
    procedure BitBtn1Click(Sender: TObject);
  end;

var
  Form1: TForm1;

implementation

uses
  uProduto, uProdutoInterface;

{$R *.dfm}

procedure TForm1.BitBtn1Click(Sender: TObject);
var
  Produto: TProduto; // usar classe diretamente, já que interface não tem Mostrar
  Qtd: Integer;
begin
  if not TryStrToInt(edtQtd.Text, Qtd) then
  begin
    ShowMessage('Quantidade inválida');
    Exit;
  end;

  Produto := TProduto.Create;
  try
    Produto.SetNome(edtNome.Text);
    Produto.SetQuantidade(Qtd);

    Memo1.Lines.Add(Format('Produto: %s | Quantidade: %d', [edtNome.Text, Qtd]));

    edtNome.Clear;
    edtQtd.Clear;
  finally
    Produto.Free;
  end;
end;

end.

